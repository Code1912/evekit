.eve-radio{

}
.eve-radio>input{ display: none}

.eve-radio>label>span{
  cursor: pointer; font-weight: normal; line-height: 20px;  display: inline-block;
}
.eve-radio>input:checked+label  span:before  {

  content: "\f111";
  transition: all 0.3s ease-in-out;
  color: #ffffff;
  border:2px solid #3c8dbc;
  background-color :#3c8dbc;
  -webkit-font-smoothing: antialiased;
}

.eve-radio>input:enabled+label:hover span:before{
  border: 2px solid  #3c8dbc;
  height: 20px;
  width: 20px;
}
.eve-radio>label span:before{
  margin-right :3px;
  padding:1px;
  height: 20px;
  width: 20px;
  text-align: center;
  vertical-align: middle;
  cursor: pointer;
  content: "";
  color: #ffffff;
  border:1px solid #ddd;
  background-color: #fffff;
  display: inline-block;
  font: normal normal normal 14px/1 FontAwesome;
  font-size: inherit;
  text-rendering: auto;
  -webkit-font-smoothing: antialiased;
}


.eve-radio>input[disabled]:checked+label  span:before  {
  content: "\f00c";
  color: #ffffff;
  border:2px solid rgba(60, 141, 188, 0.65);
  background-color :rgba(60, 141, 188, 0.65);
  cursor:not-allowed
}
.eve-radio>input[disabled]+label  span:before  {
  content: " ";
  color: #ffffff;
  cursor:not-allowed
}
.eve-radio>input[disabled]:checked+label  span:before  {
  content: "";
  color: #ffffff;
  border-color:2px solid #ddd;
  cursor:not-allowed
}
.eve-radio>input[disabled]+label  span:before  {

  border-color:2px solid #ddd!important;
  cursor:not-allowed
}
